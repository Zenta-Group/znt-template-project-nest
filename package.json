{
  "name": "znt-template-project-nest",
  "version": "2.0.0",
  "private": true,
  "license": "UNLICENSED",
  "description": "",
  "author": "",
  "engines": {
    "node": ">=18.18",
    "npm": ">=9"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_OPTIONS=\"--disable-warning=FSTDPE022\" nest start",
    "start:dev": "NODE_OPTIONS=\"--disable-warning=FSTDPE022\" nest start --watch",
    "start:debug": "NODE_OPTIONS=\"--disable-warning=FSTDPE022\" nest start --debug --watch",
    "start:prod": "NODE_OPTIONS=\"--disable-warning=FSTDPE022\" node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "audit:prod": "npx audit-ci --config ./audit-ci.json --package-manager npm --skip-dev",
    "audit:report": "npx audit-ci --config ./audit-ci.json --package-manager npm --skip-dev --show-found"
  },
  "dependencies": {
    "@fastify/static": "^8.2.0",
    "@google-cloud/firestore": "7.11.3",
    "@nestjs/common": "11.1.6",
    "@nestjs/config": "4.0.0",
    "@nestjs/core": "11.1.6",
    "@nestjs/jwt": "11.0.0",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-fastify": "11.1.6",
    "@nestjs/swagger": "11.1.6",
    "@nestjs/typeorm": "11.0.0",
    "axios": "1.8.2",
    "bcrypt": "6.0.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "fastify": "^5.0.0",
    "google-auth-library": "10.3.0",
    "joi": "17.13.3",
    "luxon": "^3.7.2",
    "mysql2": "3.14.5",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "typeorm": "0.3.26"
  },
  "devDependencies": {
    "@nestjs/cli": "11.0.7",
    "@nestjs/schematics": "11.0.7",
    "@nestjs/testing": "11.1.6",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.14",
    "@types/node": "20.17.16",
    "@types/passport-jwt": "4.0.1",
    "@types/supertest": "6.0.3",
    "@typescript-eslint/eslint-plugin": "8.22.0",
    "@typescript-eslint/parser": "8.22.0",
    "eslint": "9.19.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "jest": "29.7.0",
    "pino-pretty": "^11.3.0",
    "prettier": "3.6.2",
    "source-map-support": "0.5.21",
    "supertest": "7.1.4",
    "ts-jest": "29.4.1",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.7.3"
  },
  "overrides": {
    "fastify": "^5.0.0",
    "chalk": "4.1.2",
    "ansi-styles": "4.3.0",
    "supports-color": "7.2.0",
    "wrap-ansi": "7.0.0",
    "strip-ansi": "6.0.1",
    "string-width": "4.2.3",
    "cliui": "8.0.1",
    "jackspeak": "2.3.6",
    "glob": "10.3.12",
    "yargs": "17.7.2",
    "debug": "4.3.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
